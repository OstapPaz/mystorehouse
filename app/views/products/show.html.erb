
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="panel panel-default  panel--styled">
          <div class="panel-body">
            <div class="col-md-12 panelTop">
              <div class="col-md-4">
                <%= show_avatar(@product, '350x350', 'img-responsive') %>
              </div>
              <div class="col-md-8">
                <h2><%= @product.name %> <%= @product.model %></h2>
                <p><%= @product.adding_information %></p>
              </div>
            </div>

            <div class="col-md-12 panelBottom">
              <%= form_tag(add_to_cart_path, method: "post") do%>
                <%= label_tag(:num,"Number of product:") %>
                <%= text_field_tag(:num) %>
                <%= hidden_field_tag(:id, @product.id) %>
                <%= submit_tag("Add to cart") %>
              <% end %> <br><br>
              <div class="col-md-4 text-left">
                <h5>Price <span class="itemPrice"><%= @product.price %> UAH</span></h5>
              </div>
              <div class="col-md-4">
                <div class="stars">
                  <div> Rating <%= rating_for @product, 'quality', disable_after_rate: true %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%= link_to 'Edit', edit_admin_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<% if user_signed_in? %>
  <%= render 'comments/comments' %>
<% end %>