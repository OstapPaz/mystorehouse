<div id="filterrific_results">

  <div>
    <%= will_paginate @products %>
  </div>

  <% @products.each do |product| %>
    <div class="col-md-2 column productbox">
      <%= show_avatar(product)  %>
      <div class="producttitle"><%= product.name %> <%= product.model %></div>
      <div class="productprice"><div class="pull-right"><%= link_to 'Show', product %></div><div class="pricetext"> ‎₴ ‎<%= product.price %></div></div>
    </div>
  <% end %>

  <div>
    <%= will_paginate @products %>
  </div>

</div>