<%= form_tag("/update_cart", method: "post") do %>
  <table>
    <thead>
    <tr>
      <th></th>
      <th colspan="3"> Current cart </th>
      <th></th>
    </tr>
    </thead>

    <tbody>

    <% @order.orders_products.each do |order_product| %>
      <tr>
        <td><%= order_product.product.name+" "+order_product.product.model+" "+order_product.product.price.to_s%></td>
        <td><%= text_field_tag("[products]#{order_product.product.id}", order_product.amount) %></td>
        <td><%= link_to 'Show', order_product.product %></td>
        <td><%= link_to 'Remove from order cart',  remove_from_cart_url(remove_product_id: order_product.product.id),
                        method: :delete %></td>
      </tr>
    <% end %>
    <td><%= submit_tag 'Edit order' %></td>
    </tbody>
  </table>
  <p> Current price of order <%= @order.price_current %></p>
  <p> Price with discount <%= @discount_price %> </p>
<% end %>