<%= form_for(@order, url: {action: "create"}) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if user_signed_in? %>

    <div class="container">
      <div class="col-md-5">
        <div class="form-area">
          <form role="form">
            <br style="clear:both">
            <h3 style="margin-bottom: 25px; text-align: center;">Order form</h3>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, :value => current_user.name, class:  'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :contact_phone_number %>
              <%= f.text_field :contact_phone_number, :value => current_user.phone_number, class:  'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, :value => 'Gotham', class: 'form-control' %>
            </div>

            <% cart.cart_items.each do |cart_item| %>
              <%= f.fields_for :orders_products do |order_product_form| %>
                <tr>
                  <td><%= cart_item.product.name+" "+cart_item.product.model+" "+cart_item.product.price.to_s%></td>
                  <div class="form-group">
                    <%= order_product_form.label :amount %>
                    <%= order_product_form.text_field :amount, :value => cart_item.quantity, class:  'form-control'%>
                  </div>
                  <%= order_product_form.hidden_field :product_id, value: cart_item.product.id %>
                  <td><%= link_to 'Show', cart_item.product %></td>
                  <td><%= link_to 'Remove from order cart',  remove_from_cart_url(remove_product_id: cart_item.product.id),
                                  method: :delete %></td>
                </tr>
              <% end %>
            <% end %>

            <button type="button" id="submit" name="submit" class="btn btn-primary pull-right"><%= f.submit class: 'btn btn-primary pull-right' %></button>
          </form>
        </div>
      </div>
    </div>

  <% else %>

    <div class="container">
      <div class="col-md-5">
        <div class="form-area">
          <form role="form">
            <br style="clear:both">
            <h3 style="margin-bottom: 25px; text-align: center;">Discount Form</h3>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, :value => 'Dmytro', class:  'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :contact_phone_number %>
              <%= f.text_field :contact_phone_number, :value => '123 456 789', class:  'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, :value => 'Gotham', class:  'form-control' %>
            </div>

            <% cart.cart_items.each do |cart_item| %>
              <%= f.fields_for :orders_products do |order_product_form| %>
                <tr>
                  <td><%= cart_item.product.name+" "+cart_item.product.model+" "+cart_item.product.price.to_s%></td>
                  <div class="form-group">
                    <%= order_product_form.label :amount %>
                    <%= order_product_form.text_field :amount, :value => cart_item.quantity, class:  'form-control'%>
                  </div>
                  <%= order_product_form.hidden_field :product_id, value: cart_item.product.id %>
                  <td><%= link_to 'Show', cart_item.product %></td>
                  <td><%= link_to 'Remove from order cart',  remove_from_cart_url(remove_product_id: cart_item.product.id),
                                  method: :delete %></td>
                </tr>
              <% end %>
            <% end %>

            <button type="button" id="submit" name="submit" class="btn btn-primary pull-right"><%= f.submit class: 'btn btn-primary pull-right' %></button>
          </form>
        </div>
      </div>
    </div>

  <% end %>

<% end %>
