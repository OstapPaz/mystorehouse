<h3>Comments</h3>

<table>
  <thead>
  <tr>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @comments.each do |comment| %>
    <tr>
      <td> Text <%= comment.text %> </td>
      <td> Rating <%= comment.rating %></td>
      <td> User <%= comment.user.name %></td>
      <td> Time<%= comment.updated_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>