<%= form_for [ @product, Comment.new ], remote: true do |f| %>
  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text, size: '50x5' %>
  </div>

  <div class="field">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :product_id, :value => @product.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>