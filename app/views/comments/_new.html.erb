<div class="container">
  <div class="row">

    <div class="col-md-6">
      <div class="widget-area no-padding blank">
        <div class="status-upload">
          <%= form_for [ @product, Comment.new ], remote: true do |f| %>
            <div class="field">
              <%= f.label :text %>
              <%= f.text_area :text, size: '50x5', placeholder: 'What you think about this product?' %>
            </div>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.hidden_field :product_id, :value => @product.id %>
            <div class="actions">
              <%= f.submit class: 'btn btn-success green' %>
            </div>
          <% end %>
        </div><!-- Status Upload  -->
      </div><!-- Widget Area -->
    </div>

  </div>
</div>