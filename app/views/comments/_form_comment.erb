<h3>Add comment</h3>
<%= form_for(@comment, url: create_comment_path ) do |f| %>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_field :text %>
  </div>

  <div class="field">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :product_id, :value => @product.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>